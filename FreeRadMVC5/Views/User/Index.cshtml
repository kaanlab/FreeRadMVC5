@model IEnumerable<FreeRadMVC5.ViewModels.UserViewModel>

@{
    ViewBag.Title = "Список пользователей";
}

<h2>Пользователи</h2>

<br />

<table class="table">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Attribute)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Op)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attribute)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Op)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }, new { @class = "btn btn-default" }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

<div>
    <div class="row">
        <p>
            @Html.ActionLink("Создать", "Create", null, new { @class = "btn btn-success" })
        </p>
        <p>
            @Html.ActionLink("Добавить в группу", "Index", "UserGroup", null, new { @class = "btn btn-default" })
        </p>
        <p>
            @Html.ActionLink("Доп. атрибуты", "Index", "UserAttribute", null, new { @class = "btn btn-default" })
        </p>
    </div>
</div>